<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container">
    <h1><%= @list.name %></h1>
    <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
    <p>Check this list movies</p>
  </div>
</div>
<div class="container">
  <div>
    <h3 class="mt-3">Movies of the List</h3>
    <ul class="cards">
      <% @list.bookmarks.all.each do |element| %>
        <div class="card-trip">
            <li class="list-group-item">
                <img src="https://picsum.photos/400/300" />
              <div class="col-12">
                <div class="d-flex justify-content-between px-4 py-2">
                  <h2><%= element.movie.title %></h2>
                  <p><%= element.movie.rating %></p>
                </div>
                <div class="d-flex justify-content-between p-4 py-2">
                  <p><%= element.comment %></p>
                  <%= link_to '<i class="fa fa-trash"></i>'.html_safe, bookmark_path(element.id),
                    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, :class => "btn btn-danger card-delete m-3" %>
                </div>
              </div>
            </li>
        </div>
      <% end %>
      <li class="col-10 mx-auto list-group-item d-flex justify-content-between align-items-center">
        <%= render 'bookmark_form' %>
      </li>
      </ul>
  </div>
</div>
