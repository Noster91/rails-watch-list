<div class="container">
  <p><%= link_to '<i class="fa-solid fa-circle-plus"></i> Create a new List'.html_safe, new_list_path, :class => "btn btn-primary m-2 shadow" %> </p>
  <ul class="row">
    <% @lists.each do |element| %>
          <li class="col-4 list-group-item d-flex justify-content-between align-items-center shadow">
            <p class="ml-3 my-auto ">
              <%= link_to element.name, list_path(element) %>
            </p>
          </li>
    <% end %>
  </ul>
</div>
